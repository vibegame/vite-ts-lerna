{
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["../core/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "../core/tsconfig.json"
    }
  ]
}
